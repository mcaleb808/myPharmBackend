{
  "name": "pharmLoc",
  "version": "1.0.0",
  "description": "List local pharmacies",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node ./api",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "test": "cross-env NODE_ENV=test jest   --coverage --testTimeout=10000 --detectOpenHandles --forceExit",
    "prettier": "eslint --ignore-path ./.eslintignore . --fix",
    "build": "rm -rf ./build && babel -d ./build ./api -s",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "author": "Caleb Mugisha",
  "contributors": [
    "Musigwa Pacifique"
  ],
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "16.1.8",
    "accesscontrol": "2.2.1",
    "bcrypt": "3.0.7",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "nodemailer": "^6.4.2",
    "nodemon": "2.0.1",
    "pg": "7.12.1",
    "pg-hstore": "2.3.3",
    "sequelize": "5.21.1",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/register": "7.6.2",
    "@babel/runtime": "7.6.2",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "coveralls": "3.0.7",
    "cross-env": "6.0.3",
    "eslint": "6.4.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.4",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "private": true
}
